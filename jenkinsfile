pipeline {
    agent any

    stages {
        stage('Clonar proyecto') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Almisha/jenkins-lab.gitt',
                        credentialsId: 'github_token' // ðŸ‘ˆ este es el ID que registraste en Jenkins
                    ]]
                ])
            }
        }

        stage('Instalar dependencias') {
            steps {
                  bat 'pip install -r mlops\requirements.txt'
            }
        }

        stage('Entrenar modelo') {
            steps {
                  bat 'python mlops\train_model.py'
            }
        }

        stage('Desplegar API') {
            steps {
                sh 'nohup uvicorn mlops_1.api:app --host 0.0.0.0 --port 8000 &'
            }
        }
    }
}
